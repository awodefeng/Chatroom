<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_list_view_local"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:background="@color/bg_color"
    android:minHeight="55px"
    tools:context="com.xxun.watch.xunchatroom.activity.ChatroomMainActivity">

    <ImageView
        android:id="@+id/local_img_send_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
	android:layout_marginLeft="10dp"
	android:focusable="false"
	android:scaleType="fitXY"
	android:adjustViewBounds="true"
        />

    <ImageView
        android:id="@+id/local_img_bg_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
	android:layout_marginLeft="50dp"
	android:scaleType="fitXY"
	android:adjustViewBounds="true"
        />


    <TextView
        android:id="@+id/local_time_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/list_text_color"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="65dp"
        />

    <com.xxun.watch.xunchatroom.activity.ChatGifView
        android:id="@+id/gif_play_local"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:layout_toRightOf="@+id/local_time_tv_id"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        />

</RelativeLayout>

