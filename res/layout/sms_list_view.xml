<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sms_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="10dp"
    android:divider="@null"
    android:minHeight="100dp"
    tools:context="com.xxun.watch.xunchatroom.activity.ChatSmsActivity">

    <ImageView
        android:id="@+id/read_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


<com.xxun.watch.xunchatroom.activity.FoucusTextView
        android:id="@+id/text_tv"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="50sp"
        android:textColor="@color/contract_text_color"
        android:layout_toRightOf="@+id/read_img"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"  />

</RelativeLayout>
