<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_notification_dialog"
    android:layout_width="240dip"
    android:layout_height="240dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_color">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_photo_img"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_title_tv"
        android:layout_toRightOf="@+id/notif_photo_img"
        android:textColor="@color/content_text_color"
        android:textSize="10sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_peer_bg"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/notif_photo_img"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_content_tv"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/notif_photo_img"
        android:textColor="@color/list_text_color"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        />

    <com.example.xiaoxiao.xunchatroom.ChatGifView
        android:id="@+id/gif_play_notice"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:layout_toRightOf="@+id/notif_content_tv"
        android:layout_below="@+id/notif_photo_img"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_unread_img"
        android:layout_below="@+id/notif_photo_img"
        android:layout_toRightOf="@+id/notif_peer_bg"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_enter_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/enter_up"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_cancel_btn"
        android:layout_toRightOf="@+id/notif_enter_btn"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/close_up"
        />
</RelativeLayout>
