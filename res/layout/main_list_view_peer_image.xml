<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_list_view_peer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:background="@color/bg_color"
    android:minHeight="55px"
    tools:context="com.xxun.watch.xunchatroom.activity.ChatroomMainActivity">

    <ImageView
        android:id="@+id/peer_img_bg_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
	android:scaleType="fitXY"
	android:adjustViewBounds="true"
        />

    <ImageView
        android:id="@+id/peer_img_view_id"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        />

    <ImageView
        android:id="@+id/peer_face_img_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/peer_img_view_id"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        />


</RelativeLayout>
